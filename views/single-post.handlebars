<!-- Conversation title  -->
<div class="h2 text-2xl grid justify-items-center" id="conversation-name">{{post.post_name}}</div>
<div class="grid justify-items-center">
      <h1 class="h2 inline pt-1 pb-4 text-1xl">Hosted by: <span class="h1-mini" id="party-owner-username">@{{post.user.username}}</span></h1>
</div>

<!-- Description -->
<div class="grid justify-items-center"> 
    <div id="conversation-info" class="p-text div-bubble p-6 m-2 mb-2 w-11/12 rounded-lg grid justify-items-center">{{post.post_text}}
    </div>
</div>

<!--Conversations-->
<h1 class="h1 mt-4 grid justify-items-center">Conversations</h1>

{{#if post.comments.length}}
{{#each post.comments as |comment|}}
<!--IF Comments-->
{{> comments comment }}
{{/each}}
{{else}}
<!--IF no Comments-->
<div class="mb-10 grid justify-items-center"> 
  <div id="user-friends" class="p-text div-bubble p-6 m-2 w-11/12 rounded-lg">
    <div>
      <div class="logo">Uh-oh!</div>
      <div class="p-text">No one has commented on this yet. Share your thoughts!</div>
  </div>
</div>
{{/if}}


<!-- Add comment -->

<div class="grid justify-items-center"> 
    <div class="div-bubble p-2 m-2 mb-4 w-11/12 rounded-lg">
        <div class="grid justify-items-center p-4"> Add a Comment</div>
        <form id="comment" class="grid justify-items-center">
            <textarea name="comment" class="w-11/12 h-24 p-2 rounded-lg" placeholder="Share your thoughts"></textarea>
           <button id="submit" class="button-main text-white my-3 px-16 py-1 mb-7 md:px-30 md:py-2 md:text-2xl rounded-lg">Save Comment</button>
            </div>
        </form>
    </div>
    </div>
    
    <div class="grid justify-items-center">
<script src="/javascript/comment.js"></script>