<div class="h1 py-6 px-8 grid justify-items-center">Create a New Party!</div>

<div class="grid justify-items-center"> 
<div class="div-bubble p-6 m-2 mb-4 w-11/12 rounded-lg">
    <div class="grid justify-items-center h2 text-xl mb-4">
    Choose the topic(s) of the party:
    </div>
    <!-- list of user interests for party topic options -->
    <div id="user-interests" class="grid grid-cols-3 md:grid-cols-6 justify-start">
        {{#each interests as |interest|}}
        <button class="interest rounded-lg px-8 mx-2 mb-2 border border-purple-900">
            {{interest.id}} - {{interest.interest_name}}
        </button>
        {{/each}}
    </div>
    <div class="grid justify-items-center h2 text-xl m-4">
        Name your party!
    </div>
    <form id="party-name" class="grid justify-items-center">
        <textarea name="party-name" class="w-11/12 h-24 p-2 rounded-lg" placeholder="Start the conversation!"></textarea>
    </form>
    <div class="grid justify-items-center h2 text-xl m-4">
        Write a description for your party!
    </div>
    <form id="party-description" class="grid justify-items-center">
        <textarea name="party-description" class="w-11/12 h-24 p-2 rounded-lg" placeholder="Start the conversation!"></textarea>
    </form>
    <div class="grid flex-row justify-items-center">
          <button id="submit" class="button-main text-white my-3 px-16 py-1 mb-7 md:px-30 md:py-2 md:text-2xl rounded-lg">Complete</button>
    </div>
</div>
</div>

<div class="grid justify-items-center">
<a href="/dashboard" class="button-secondary inline text-white px-12 py-1 mx-1 mt-2 mb-2 rounded-lg grid">Cancel</a>
</div>
<script src="/javascript/create-party.js"></script>