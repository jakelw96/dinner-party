<!--Profile-->
<div class="settings items-end">
    
</div>
<h1 class="h1 grid justify-items-center" id="username">@{{user.username}}'s dashboard</h1>

<h1 class="h1 grid justify-items-center" id="username">Bio</h1>
{{#if user.bio}}
<div class="grid justify-items-center"> 
  <div id="user-bio" class="p-text div-bubble p-6 m-2 mb-4 w-11/12 rounded-lg grid justify-items-center">{{user.bio.bio_text}}
    <a href="/dashboard/bio/edit/{{{user.bio.id}}}" class="button-secondary inline text-white px-8 mt-5 rounded-lg" id="edit-bio">edit</a>
  </div>
</div>
{{else}}
<!--IF no bio-->
<div class="grid justify-items-center"> 
  <div id="user-bio" class="p-text div-bubble p-6 m-2 mb-4 w-11/12 rounded-lg grid justify-items-center">Write something about yourself! What should people know about you?
    <a href="/dashboard/bio" class="button-secondary inline text-white px-8 mt-5 rounded-lg" id="edit-bio">edit</a>
  </div>
</div>
{{/if}}

<!--User interests-->
<h1 class="h1 grid justify-items-center" id="username">My Interests</h1>
<div id="user-interests" class="grid grid-cols-3 mx-8 md:grid-cols-6">
  {{#each user.interests }}
  <div id="interest-element" class="interest rounded-lg px-8 mx-2 mb-2 border border-purple-900">
    {{interest_name}}
  </div>
  {{/each}}
</div>

<!--Parties User is Hosting-->
<h1 class="h1 mt-6 grid justify-items-center">Parties I'm Hosting</h1>

<!--IF no Parties-->
<div class="mb-10 grid justify-items-center"> 
  <div id="user-friends" class="p-text div-bubble p-6 m-2 w-11/12 rounded-lg">
    <div>
      {{#if user.parties}}
      {{#each user.parties as |parties|}}
      {{> party parties }}
      {{/each}}
      {{else}}
      <div class="logo">Uh-oh!</div>
      <div class="p-text">It looks like you aren't hosting any parties. Create a new party to start a conversation!</div>
      {{/if}}
  </div>
</div>

<!-- Create a new party -->
<a href="/dashboard/party" class="h1-large">+ Host a New Party</a>

